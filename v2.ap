layer accesspoint {
    let repo = https://github.com/bevicted/accesspoint

    layer repo {
        open {{repo}}
    }
    layer issues {
        open {{repo}}/issues
    }
    layer issue {
        open {{repo}}/issues/{{input}}
    }
}

layer multi word layer {
