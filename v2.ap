layer kubectl {
    let cmd = kubectl

    layer help {
        run {{cmd}} help
    }
    layer pod {
        input pod
        run {{cmd}} get pod {{pod}}
        run {{cmd}} logs -f {{pod}}
    }
    layer get {
        let cmd = {{cmd}} get
        layer pod {
            let cmd = {{cmd}} pod
            input pod_cmd
            run {{cmd}} {{pod_cmd}}
        }
    }
}
